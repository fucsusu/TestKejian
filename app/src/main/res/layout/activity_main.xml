<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.fucc.myapplication.activity.MainActivity">

    <ImageView
        android:id="@+id/xing"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/xing" />

    <ImageView
        android:id="@+id/jiangbei"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/jiangbei"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/send_trophy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/send_trophy"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/yi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/yi"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="开始" />

</RelativeLayout>
